body.loading
    button#close.link-button.hidden &larr; Back
    button#find-other-rooms.link-button.hidden &larr; Other rooms
    button#book-me.link-button.hidden Book me &rarr;

    if user
        p welcome back #{user.displayName}
    //.g-signin2(data-onsuccess="onSignIn")
    //a.g-signout.hidden(href="#",onclick="signOut();") Sign out
    #errormsg.hidden
    #container.status-busy
        #status
            #room-name-top.hidden Room name
            #minutes-free
            .events
                #current-event.event.hidden
                    h4.which This Meeting
                    h3.organizer Organizer
                    h2.title Title
                    h3.when When
                #next-event.event.hidden
                    h4.which Next Meeting
                    h3.organizer Organizer
                    h2.title Title
                    h3.when When
        #booking
            p#info
                span#room-name
                    | This room
                |  is free 
                span.free-at
                    | at time-o-clock
                |  for 
                strong.time-available
                    | ?
                |  minutes
            #QR.hidden
                p
                    | Scan QR Code to continue 
                ul#time
                    li#QRContent
            #controls
                p
                    | Book it 
                    span.free-at
                    |  for?
                ul#time
                    li#time-less.time-adjust
                        button.link-button(type="button")
                    li#time-required
                        button.link-button(type="button")
                            | 30
                    li#time-more.time-adjust
                        button.link-button(type="button")

        section#rooms
            ul#rooms-list
                li Loading...

    script(src="/js/jquery-1.5.1.min.js")
    script(src="/js/underscore-min.js")
    script(src="/js/conf.js")
    script(src="/js/util.js")
    script(src="/js/ui.js")
    script(src="/js/eventManager.js")
    script(src="/js/main.js")
    //script(src="/js/auth.js")
    //script(src="https://apis.google.com/js/platform.js",async,defer)

    if user
        script window.user = !{JSON.stringify(user)}